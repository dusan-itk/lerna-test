{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "babel-jest": "^24.9.0",
    "babel-preset-react-app": "^9.0.2",
    "camelcase": "^5.3.1",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "enzyme-to-json": "^3.4.3",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.5.0",
    "eslint-config-react-app": "^5.0.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^23.0.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "jest": "^24.9.0",
    "jest-environment-jsdom-fourteen": "^0.1.0",
    "jest-watch-typeahead": "^0.4.0",
    "lerna": "^3.18.3",
    "prettier": "^1.18.2",
    "react-app-polyfill": "^1.0.4"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap --hoist",
    "build": "npm run packages:build && lerna run build",
    "lint": "eslint --max-warnings 0 'packages/*/src/**/*.js'",
    "packages:build": "lerna exec --ignore app --parallel 'BABEL_ENV=production babel --root-mode=upward src --out-dir lib --source-maps --delete-dir-on-start --no-comments --copy-files'",
    "packages:build:watch": "lerna exec --ignore app --parallel 'BABEL_ENV=development babel --root-mode=upward src --out-dir lib --source-maps --delete-dir-on-start --no-comments --copy-files --watch'",
    "prettier": "prettier --write \"packages/*/src/**/*.{js,scss}\"",
    "start": "lerna run start",
    "test": "BABEL_ENV=test jest",
    "test:coverage": "BABEL_ENV=test jest --coverage=true"
  }
}
